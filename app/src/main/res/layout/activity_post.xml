<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahilarora.fireapp.PostActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_action_name"
        android:background="@android:color/transparent"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="210dp"
        android:padding="15dp" />

    <TextView
        android:text="Add Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/imageButton"
        android:id="@+id/t1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:paddingBottom="10dp"
        android:hint="Title"

     android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/input_outline"

        android:layout_marginTop="20dp"
        android:id="@+id/d1"
        android:layout_below="@+id/t1"
        android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignStart="@+id/t1"
        android:padding="15dp"
        android:hint="Description"
       />

    <Button
        android:text="Submit Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/sb1"
        android:padding="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/d1"
        android:layout_alignLeft="@+id/d1"
        android:layout_alignStart="@+id/d1"
        android:layout_alignRight="@+id/d1"
        android:layout_alignEnd="@+id/d1"
        android:textColor="@android:color/white" />
</RelativeLayout>
